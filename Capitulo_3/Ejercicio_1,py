def compute_pay(horas, tarifa):
    if (horas > 40):
        return 40 * tarifa + (horas - 40) * tarifa * 1.5
    else:
        return 40 * tarifa
 
horas = float(input('Ingrese el n√∫mero de horas: '))
tarifa = float(input('Ingrese la tarifa: '))
 
print('Salario es igual: ', compute_pay(horas, tarifa))